rule "Accelerated heartbeat!"
    when
        ICUPatient($ssn: ssn)
        $hb1: HeartBeatEvent(ssn==$ssn)
        Number(intValue > 25) from accumulate(
            $hb2: HeartBeatEvent(
                this != $hb1,
                ssn == $ssn,
                this meets[10s] $hb1
            ),
            count($hb2)
        )
    then
        insert(new AcceleratedHeartbeatEvent($ssn));
        drools.halt();
end
